<div class="p-search-form__container">
<%= form_with model: search, url: search_tweets_path, method: :get, local: true do |f|  %>
  
  <div class="p-search-form__section">
    <p>提供場所（都道府県)</p>
    <%= f.collection_select :prefecture_id, Prefecture.all, :id, :prefecture, {include_blank: "指定なし"}, {class: "p-search-form__input", id: "prefecture-id"} %>
  </div>

  <div class="p-search-form__section">
    <p>提供場所（市区町村)</p>
    <%= f.collection_select :city_id, City.all, :id, :city, {include_blank: "指定なし"}, {class: "p-search-form__input", id: "city-id"}%>
  </div>

  <div class="p-search-form__section", id='tag-field'>
    <p>タグ</p>
    <%= f.text_field :name, class: "p-search-form__input", id: "search-tag-name", autocomplete: "off" %>
  </div>

  <div class="p-search-form__search-result" id="search-result">
  </div>
    
  <div class="p-tweet-form__section">
    <%= f.submit '記事を検索',class: "p-search-form__search-btn" %>
  </div>

<% end %>
</div>