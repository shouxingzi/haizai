<header class="l-header p-header">
  <div class="p-header__contents--left ">
    <%= link_to image_tag('home_icon'),root_path, class: "" %>
  </div>
  <div class="p-header__contents--right">
    <ul class="p-header__account-menu">
      <% if user_signed_in? %>
        <li><%= link_to "ログアウト", destroy_user_session_path, method: :DELETE %></li>
        <li class="p-header__account-menu--hover-trigger"><a href="#"><%= current_user.username %></a>
          <ul class="p-header__user-menu">
            <li><%= link_to "新規投稿", new_tweet_path %></li>
            <li><%= link_to "マイメニュー", "/users/#{current_user.id} " %></li>
          </ul>
        </li>
      <% else %>
        <li><%= link_to "ログイン", new_user_session_path %></li>
        <li><%= link_to "ユーザー登録", new_user_registration_path %></li>
      <% end %>
    </ul>
  </div>
</header>



